//Project Euler - Problem 1

var i = 0;
var sum = 0;

for (i = 1; i < 1000; i++) {

//for each number, check to see if it is divisible by 3
	if (i%3 == 0) {
    	sum = sum + i;
    }
    
    //if the number isn't divisible by 3, check for 5
    else if (i%5 == 0) {
    	sum = sum + i;
    }
    
//if the number isn't divisible by 3 or 5, move on!

}

document.write(sum);
